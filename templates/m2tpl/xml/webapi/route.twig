    <route url="/{{version}}/{{url}}" method="{{method}}">
        <service class="{{service}}" method="{{function}}"/>
        <resources>
{% for resource in resources %}
            <resource ref="{{resource}}"/>
{% endfor %}
        </resources>
{% if data|length>0 %}
        <data>
{% for item in data %}
            <parameter name="{{item.name}}" force="{{item.force}}">%{{item.code}}%</parameter>
{% endfor %}
        </data>
{% endif %}
    </route>
